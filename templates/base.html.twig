<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Bienvenue
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
		{# le lien du bootstrap des icône #}

		<link
		rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}{% endblock %}

		<link rel="stylesheet" href="{{asset('assets/css/navbar.css')}}">
		<link rel="stylesheet" href="{{asset('assets/css/footer.css')}}">
		<link rel="stylesheet" href="{{asset('assets/css/all.min.css')}}">
		<link rel="stylesheet" href="{{asset('assets/css/product.css')}}">
		<link rel="stylesheet" href="{{asset('assets/css/product1.css')}}">
		<link rel="stylesheet" href="{{asset('assets/css/article.css')}}">
		<link rel="stylesheet" href="{{asset('assets/css/utilisateur.css')}}">
		<link rel="stylesheet" href="{{asset('assets/css/panier.css')}}">
		<link rel="stylesheet" href="{{asset('assets/css/services.css')}}">
		<link rel="stylesheet" href="{{asset('assets/css/services_bis.css')}}">
		<link rel="stylesheet" href="{{asset('assets/css/accordion.css')}}">
		<link rel="stylesheet" href="{{asset('assets/css/contact.css')}}">
		<link rel="stylesheet" href="{{asset('assets/css/slider.css')}}">
		<link rel="stylesheet" href="{{asset('assets/css/quote.css')}}">
		<link rel="stylesheet" href="{{asset('assets/css/utilisateur_bis.css')}}">
		<link rel="stylesheet" href="{{asset('assets/css/parent-slider-quote.css')}}">
		<link rel="stylesheet" href="{{asset('assets/css/navbar2.css')}}">
		<link rel="stylesheet" href="{{asset('assets/css/commander.css')}}">


	</head>
	<body>

		<header>
			<nav class='navbar'>
				<a href="{{path('app_product')}}" class='logoLarycom'>LARYCOM</a>
				<ul class='ulNavbar'>

					<li class='liUlNavbar'>
						<a href="{{path('app_product')}}">Appareils</a>
					</li>
					
					<li class='liUlNavbar'>
						<a href="{{path('app_services')}}">Services</a>
					</li>
					<li class='liUlNavbar'>
						<a href="{{path('app_contact')}}">Contact</a>
					</li>
				
		
					{# {% endif %} #}
					{# Si l'utilisateur est connecté il verra la lien déconnexion 
						sinon il verra les liens inscription et connection
					#}
					{% if app.user %}
						<li class='liUlNavbar'>
							<a href="{{path('app_logout')}}">Déconnexion</a>
						</li>

					{% else %}
						<li class='liUlNavbar'>
							<a href="{{path('app_register')}}">Inscription</a>
						</li>
						<li class='liUlNavbar'>
							<a href="{{path('app_login')}}">Connexion</a>
						</li>

					{% endif %}

					<li class='liUlNavbar'>
						<a href="{{path('app_cart')}}">Panier
							<i class="bi bi-cart4"></i> 
							
						</a>
					</li>

					
					<li class='liUlNavbar'>
						 <span class="dropTitle">Toutes nos catégories <i class="fa-solid fa-caret-down iconsDrop"></i></span>
							<ul class="allCategories">
								<li><a class="appareils" href="{{path('app_product')}}">Appareils</a></li>
								<li><a class="produits" href="{{path('app_article')}}">Produits</a></li>
								<li><a class="baggages" href="{{path('app_bagages')}}">Bagages</a></li>
								<li><a class="chaussures" href="{{path('app_chaussures')}}">Chaussures</a></li>
								<li><a class="accessoires" href="{{path('app_accessoires')}}">Accessoires</a></li>
								
							</ul>
					</li>

				</ul>

				<div class="navbarParentSpan">
					<span class='span'></span>
					<span class='span'></span>
					<span class='span'></span>
				</div>
			</nav>

			{# navbar2 #}

			{# Si l'utilsateur a le rôle ROLE_ADMIN, il verra la lien ajouter produit #}
				
			{# {% if is_granted('ROLE_ADMIN') %} #}
			{% if is_granted('ROLE_ADMIN') %}
				<nav class="navbar2">
				
					<ul class="ulNavbar2">
						<li class='liUlNavbar'>
						
							<span>Produits <i class="fa-solid fa-caret-down"></i></span>
							<ul>
								<li><a href="{{path('save_product')}}">Ajoute Appareils</a></li>
								
							</ul> 
						</li>

						<li class='liUlNavbar'>
							<span>Articles <i class="fa-solid fa-caret-down"></i></span>
							<ul>
								<li><a href="{{path('save_article')}}">Ajoute Articles</a></li>
							</ul> 
						</li>

						<li class='liUlNavbar'>
						
							<span>Bagages <i class="fa-solid fa-caret-down"></i></span>
							<ul>
								<li><a href="{{path('save_bagages')}}">Ajoute Bagages</a></li>
								
							</ul> 
						</li>

						<li class='liUlNavbar'>
						
							<span>Chaussures <i class="fa-solid fa-caret-down"></i></span>
							<ul>
								<li><a href="{{path('save_chaussures')}}">Ajoute Chaussures</a></li>
							
							</ul> 
						</li>

						<li class='liUlNavbar'>
						
							<span>Accessoires <i class="fa-solid fa-caret-down"></i></span>
							<ul>
								<li><a href="{{path('save_accessoires')}}">Ajoute Accessoires</a></li>
								
							</ul> 
						</li>

					</ul>
				</nav>
			{% endif %}


			<div class="my-3">
				{# La message flashes #}
				{% for type, messages in app.flashes %}
					<div class="alert alert-{{type}} alert-dismissible fade show" role="alert">
						{% for message in messages %}
							{{message}}
						{% endfor %}
						<button type="button" class="close" data-dismiss="alert" aria-label="close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
				{% endfor %}
			</div>
		</header>




		<main>
			{% block body %}{% endblock %}
		</main>

		<footer>

		<div class="rights text-center">
			<b><p>@2021-2022 Larycom</p></b>
			<p>La boutique 100% made in France</p>
			<a href="{{path('app_product')}}">Larycom</a>
		</div>
			<div class="footer">
				<div class='larycomFooter'>
					<a href="{{path('app_product')}}">LARYCOM</a>
				</div>

				<ul class='ulFooter'>
					<li>
						<a href="{{path('app_services')}}">Nos services</a>
					</li>
					
					<li>
						<a href="{{path('app_register')}}">Creér d'un compte</a>
					</li>
					<li>
						<a href="{{path('app_login')}}">Votre compte</a>
					</li>
				</ul>

				<div class="reseau">
					<h5 class='text-center'>Suivez-Nous
					</h5>
					<a href="https://www.facebook.com/">
						<i class="fa-brands fa-facebook"></i>
					</a>
					<a href="https://www.twitter.com/">
						<i class="fa-brands fa-twitter"></i>
					</a>
					<a href="https://www.instagram.com/">
						<i class="fa-brands fa-instagram"></i>
					</i>
				</a>
				<a href="https://www.linkedin.com/">
					<i class="fa-brands fa-linkedin"></i>
				</a>
			</div>

			<div class='question'>
				<h3 class='text-center'>Une question??</h3>
				<a href="{{path('app_contact')}}">Contacter-Nous</a>
			</div>
		</div>
	</body>

</footer>
</html>
{% block javascripts %}
    <script src='{{asset('assets/js/navbar.js')}}'></script>
    <script src='{{asset('assets/js/panier.js')}}'></script>
    <script src='{{asset('assets/js/services.js')}}'></script>
    <script src='{{asset('assets/js/accordion.js')}}'></script>
    <script src='{{asset('assets/js/contact.js')}}'></script>
    <script src='{{asset('assets/js/product.js')}}'></script>
    <script src='{{asset('assets/js/slider.js')}}'></script>
    <script src='{{asset('assets/js/quote.js')}}'></script>
    <script src='{{asset('assets/js/panier2.js')}}'></script>
    <script src='{{asset('assets/js/commander.js')}}'></script>
{% endblock %}

<script>$('.alert').alert()</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script></body></html>
